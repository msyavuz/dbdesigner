{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch run src/index.ts & tsc --watch",
    "schema:auth": "cli generate --output ./src/db/schemas/auth-schema.ts -y",
    "schema:db": "npx drizzle-kit generate && npx drizzle-kit migrate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "type": "tsc -b",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.2",
    "@libsql/client": "^0.15.9",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "openai": "^5.12.2",
    "pg-native": "^3.5.2",
    "shared": "workspace:*",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/bun": "latest",
    "@types/pg": "^8.11.10",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "pg": "^8.12.0",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  }
}
